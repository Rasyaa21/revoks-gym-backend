# Development Dockerfile (root user)
FROM golang:1.21-alpine

# Install required packages
RUN apk add --no-cache git gcc musl-dev

# Set working directory
WORKDIR /app

# Install air for hot reload (pin to Go 1.21 compatible version)
RUN go install github.com/cosmtrek/air@v1.49.0

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Run with air for hot reload
CMD ["air", "-c", ".air.toml"]
