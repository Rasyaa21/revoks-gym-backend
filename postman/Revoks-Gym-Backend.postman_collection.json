          "name": "Auth - Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "let json = {};",
                  "try { json = pm.response.json(); } catch (e) { json = null; }",
                  "if (json && json.data && json.data.access_token) {",
                  "  pm.environment.set('token', json.data.access_token);",
                  "  pm.collectionVariables.set('token', json.data.access_token);",
                  "}",
                  "if (json && json.data && json.data.user && json.data.user.id) {",
                  "  pm.environment.set('userId', json.data.user.id);",
                  "  pm.collectionVariables.set('userId', json.data.user.id);",
                  "}",
                  "pm.test('token saved (if present)', function () { pm.expect(pm.environment.get('token')).to.not.be.undefined; });"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{loginEmail}}\",\n  \"password\": \"{{loginPassword}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
